@model Soundify.Models.video

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Soundify - Converter</title>

<div class="w3-half w3-grey w3-container w3-animate-bottom" style="height:700px">
    <div class="w3-padding-32 w3-center">
        <h1>Personal File Converter</h1>
        <div class="w3-center w3-padding-large">
            <h4>Choose a destination file type:</h4>
            @using (Html.BeginForm("fileConversion", "Home", FormMethod.Post, new { enctype = "multipart/form-data"})) {
                <div style="text-align:center">@Html.DropDownListFor(x => x.fileType, new List<SelectListItem> { new SelectListItem { Value = "mp3", Text = "mp3" }, new SelectListItem { Value = "wav", Text = "wav" }, new SelectListItem { Value = "mp4", Text = "mp4" }, new SelectListItem { Value = "flv", Text = "flv" }, new SelectListItem { Value = "mov", Text = "mov" }, new SelectListItem { Value = "wmv", Text = "wmv" } })</div>
                <br /><h4>...and upload your own Media File to convert to a new file type</h4>
                @Html.TextBoxFor(x => x.media, new { type = "file", @class = "forms-medium", accept = "audio/*, video/*" })
                <br /><br />
                <button class="w3-button w3-block w3-light-green w3-center w3-text-white" type="submit">Convert File</button>
                <label class="field-validation-error"><br />@Html.DisplayFor(x => x.message)</label>
            }
        </div>
    </div>
</div>